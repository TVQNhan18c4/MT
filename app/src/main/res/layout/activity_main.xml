<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#EFEAEA"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#B6B6B6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#333231"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="OFF"
                    android:textSize="15dp"
                    android:backgroundTint="#807D7D"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="MRC"
                    android:textSize="15dp"
                    android:backgroundTint="#807D7D"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="M-"
                    android:textSize="15dp"
                    android:backgroundTint="#807D7D"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="M+"
                    android:textSize="15dp"
                    android:backgroundTint="#807D7D"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#807D7D"
                    android:text="%"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#807D7D"
                    android:text="√"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="MC"
                    android:textSize="15dp"
                    android:backgroundTint="#807D7D"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="MR"
                    android:textSize="15dp"
                    android:backgroundTint="#807D7D"/>

                <Button
                    android:id="@+id/chia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#807D7D"
                    android:text="⁄"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="+/-"
                android:textSize="20dp"
                android:backgroundTint="#807D7D"/>

            <Button
                android:id="@+id/so7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#EFEAEA" />

            <Button
                android:id="@+id/so8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="8"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#EFEAEA"/>

            <Button
                android:id="@+id/so9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#EFEAEA"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/nhan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="X"
                android:textSize="20dp"
                android:backgroundTint="#807D7D"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="♪"
                android:textSize="40dp"
                android:backgroundTint="#807D7D"/>

            <Button
                android:id="@+id/so4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="4"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#EFEAEA"/>

            <Button
                android:id="@+id/so5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="5"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#EFEAEA"/>

            <Button
                android:id="@+id/so6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="6"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#EFEAEA"/>

            <Button
                android:id="@+id/tru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="-"
                android:textSize="40dp"
                android:backgroundTint="#807D7D"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="CE"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#FF9800" />

                    <Button
                        android:id="@+id/so1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="1"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#EFEAEA"/>

                    <Button
                        android:id="@+id/so2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="2"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#EFEAEA"/>

                    <Button
                        android:id="@+id/so3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="3"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#EFEAEA"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/C"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF9800"
                        android:text="ON/C"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="0"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#EFEAEA"/>

                    <Button
                        android:id="@+id/cham"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="."
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#EFEAEA"/>

                    <Button
                        android:id="@+id/bang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="="
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#EFEAEA"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <Button
                    android:id="@+id/cong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="+"
                    android:textSize="30dp"
                    android:backgroundTint="#807D7D"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>